<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:width="@dimen/pomodoro_circle_height" android:height="@dimen/pomodoro_circle_height">
        <shape android:shape="oval">
            <stroke android:color="@color/black" android:width="1dp"></stroke>
            <solid android:color="@color/white"></solid>
        </shape>
    </item>

    <item android:width="@dimen/pomodoro_circle_height" android:height="@dimen/pomodoro_circle_height_half" android:gravity="bottom">
        <shape android:shape="rectangle">
            <solid android:color="@color/black"></solid>
            <corners android:bottomRightRadius="100dp" android:bottomLeftRadius="100dp"></corners>
        </shape>
    </item>
    <item android:width="@dimen/pomodoro_circle_height_half" android:height="@dimen/pomodoro_circle_height_half" android:gravity="right">
        <shape android:shape="rectangle">
            <solid android:color="@color/black"></solid>
            <corners android:topRightRadius="100dp" ></corners>
        </shape>
    </item>
</layer-list>