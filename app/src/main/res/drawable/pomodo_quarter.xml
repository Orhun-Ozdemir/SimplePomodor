<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <item>
        <shape android:shape="oval">
            <size android:height="@dimen/pomodoro_circle_height" android:width="@dimen/pomodoro_circle_height"></size>
            <solid android:color="@color/white"></solid>
            <stroke android:color="@color/black" android:width="2dp"></stroke>
        </shape>
    </item>
    <item android:width="@dimen/pomodoro_circle_height_half" android:height="@dimen/pomodoro_circle_height_half" android:gravity="right">
        <shape android:shape="rectangle">
            <corners android:topRightRadius="1000dp"></corners>
            <solid android:color="@color/black"></solid>
        </shape>
    </item>


</layer-list>